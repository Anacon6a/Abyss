<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile.editprofile.EditProfileFragment">
    <data>

        <variable
            name="EditProfileViewModel"
            type="com.example.abyss.ui.profile.editprofile.EditProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                app:layout_constraintEnd_toStartOf="@id/add_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/add_text"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Редактирование аккаунта"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/back"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_panel">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/title_text_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/name_input_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/save_image"
                    android:layout_marginTop="40dp"
                    android:text="Имя пользователя"
                    android:textColor="@color/grey"
                    android:textSize="18dp"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeable_image_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    loadImage="@{EditProfileViewModel.userImageUrl}"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    app:srcCompat="@drawable/ic_user_image_profile" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/select_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/bg_com_btn"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    android:src="@drawable/ic_add_post"
                    app:layout_constraintBottom_toBottomOf="@+id/shapeable_image_view"
                    app:layout_constraintStart_toStartOf="@+id/shapeable_image_view"
                    app:layout_constraintTop_toTopOf="@+id/shapeable_image_view" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/save_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_com_btn_with_enabled"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    android:onClick="@{() -> EditProfileViewModel.onImageSave()}"
                    android:text="Сохранить"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shapeable_image_view" />
                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/name_input_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/save_image"
                    android:layout_marginTop="40dp"
                    android:text="Имя пользователя"
                    android:textColor="@color/grey"
                    android:textSize="18dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Введите имя пользователя"
                    android:maxHeight="150dp"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    android:text="@={EditProfileViewModel.userName}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_name" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/save_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_com_btn_with_enabled"
                    android:enabled="@{EditProfileViewModel.buttonNameEnabled}"
                    notEnabledIfEmpty="@{EditProfileViewModel.userName}"
                    android:onClick="@{() -> EditProfileViewModel.onNameUpdate()}"
                    android:text="Изменить"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_input_edit_text" />
                <TextView
                    android:id="@+id/title_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/name_input_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/save_name"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/grey"
                    android:textSize="18dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Введите Email"
                    android:maxHeight="150dp"
                    android:inputType="textEmailAddress"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    android:text="@={EditProfileViewModel.userEmail}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_email" />
                <TextView
                    android:id="@+id/login_error"
                    hideIfEmpty2="@{EditProfileViewModel.emailErrorString}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxLines="3"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/login"
                    app:layout_constraintEnd_toEndOf="@id/email_input_edit_text"
                    app:layout_constraintStart_toStartOf="@+id/email_input_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/email_input_edit_text" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/save_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_com_btn_with_enabled"
                    android:enabled="@{EditProfileViewModel.buttonEmailEnabled}"
                    notEnabledIfEmpty="@{EditProfileViewModel.userEmail}"
                    android:onClick="@{() -> EditProfileViewModel.onEmailUpdate()}"
                    android:text="Изменить"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_error" />
                <TextView
                    android:id="@+id/title_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/name_input_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/save_email"
                    android:layout_marginTop="10dp"
                    android:text="Пароль"
                    android:textColor="@color/grey"
                    android:textSize="18dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Введите старый пароль"
                    android:maxHeight="150dp"
                    android:inputType="textPassword"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    android:text="@={EditProfileViewModel.userPassword}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_password" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_password_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Введите новый пароль"
                    android:maxHeight="150dp"
                    android:inputType="textPassword"
                    android:enabled="@{EditProfileViewModel.viewEnabled}"
                    android:text="@={EditProfileViewModel.newUserPassword}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_input_edit_text" />
                <TextView
                    android:id="@+id/password_error"
                    hideIfEmpty2="@{EditProfileViewModel.passwordErrorString}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxLines="3"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/login"
                    app:layout_constraintEnd_toEndOf="@+id/new_password_input_edit_text"
                    app:layout_constraintStart_toStartOf="@+id/new_password_input_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/new_password_input_edit_text" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/save_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_com_btn_with_enabled"
                    android:enabled="@{EditProfileViewModel.buttonPasswordEnabled}"
                    android:onClick="@{() -> EditProfileViewModel.onPasswordUpdate()}"
                    android:text="Изменить"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_error" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progress_bar_loading_all_posts"
            style="@style/SpinKitView.MultiplePulse"
            hideIfFalse="@{EditProfileViewModel.loadingEdit}"
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/purple_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


